/* pages/component/dialog-op/dialog-op.wxss */

/* 操作弹窗 */

.dialog-op {
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  top: 0;
  left: 0;
}

.dialog-back {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 20;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  left: 0;
  top: 0;
}

.dialog-content {
  z-index: 30;
  position: fixed;
  background-color: #e5e5e5;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  color: #000;
  font-size: 28rpx;
  background-color: white;
  margin-bottom: 2rpx;
}

.row image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

/* 删除弹窗 */

.deleteAlert {
  z-index: 30;
  width: 503rpx;
  background-color: white;
  border-radius: 10rpx;
  margin: auto auto;
  color: #333;
  font-size: 30rpx;
  text-align: center;

  box-sizing: border-box;
  padding: 55rpx 30rpx 10rpx 30rpx;
}

.deleteAlert-desc {
  display: block;
}

.delete-select {
  font-size: 26rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  display: flex;

  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
  margin-top: 20rpx;
}

.delete-select-op {
  /* width: 100rpx; */
  padding: 0 30rpx;
  text-align: center;
}
