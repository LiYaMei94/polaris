page{
  height: 100%;
}
.StartPage{
  height: 100%;
  width: 100%;
  position: relative;
}
.StartPage>image,.StartPageText{
  width: 100%;
  height: 100%;
  position: absolute;
}
.StartPageText{
  padding: 30rpx;
  box-sizing: border-box;
}
.countdown{
  color: #EBEBEB;
  float: right;
  border: 1rpx solid #EBEBEB;
  border-radius: 15rpx;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}
.iconBox{
  width: 70rpx;
  height: 70rpx;
  background-color: white;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;  
  float: left;
}
.title{
  float: left;
  color: white;
  font-size: 40rpx;
  font-weight: 900;
  margin-left: 30rpx;
  margin-top: 8rpx;
}
.iconBox image{
  width: 45rpx;
  height: 45rpx;
}
.StartPageBottom{
  position: fixed;
  bottom: 100rpx;
  left: 22%;
  width: 56%;
  text-align: center;
}