.mall_recharge{
  height: 100%;
  background-color: white;
}
/* 额度 */
.recharge_limit{
  width: 100%;
  padding: 50rpx 0 50rpx 50rpx;
  box-sizing: border-box;
}
.recharge_limit_wrap{
  padding-top: 50rpx;
  overflow: hidden;
}
.recharge_limit_item{
  width: 304rpx;
	height: 134rpx;
  float: left;
  position: relative;
}
.recharge_limit_item:nth-child(1){
  margin-right: 40rpx;
}
.recharge_limit_item image:nth-child(1){
  width: 100%;
  height: 100%;
}
.recharge_limit_item image:nth-child(2){
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}
/* 支付方式 */
.pay_method{
  border-top: 10rpx solid #eff3f6;
  padding-right: 50rpx;
}
.pay_method_wrap{
  margin-top: 50rpx;
}
.pay_method_item{
  overflow: hidden;
  height: 50rpx;
  line-height: 50rpx;
}
.item_left{
  float: left;
}
.item_right{
  float: right;
}
.item_left image{
  width: 50rpx;
	height: 50rpx;
  position: absolute;
}
.item_left text{
  margin-left: 80rpx;
}
.item_right image{
  width: 30rpx;
  height: 30rpx;
}
/* 确认支付 */
.pay_confirm{
  width: 690rpx;
	height: 100rpx;
	border-radius: 10rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
  position: absolute;
  left: 50%;
  margin-left: -345rpx;
  bottom: 120rpx;
}