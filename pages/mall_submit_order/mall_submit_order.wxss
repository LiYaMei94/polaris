@import '../template/coin-lock-wrap/coin-lock-wrap.wxss';
@import '../template/success-dialog-wrap/success-dialog-wrap.wxss';
page{
  padding: 30rpx;
   box-sizing: border-box;
   height: 100%;
}
/* 商品信息 */
.product_wrap{
  overflow: hidden;
  background-color: white;
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%;
}
.product_info{
  float: left;
  width: 371.8rpx;
}
.product_image{
  width: 230rpx;
  height:230rpx;
  background-color: #dfdfdf;
  float: left;
  margin-right: 30rpx;
}
.product_image image{
  width: 100%;
  height: 100%;
}
.product_describe,.product_name{
  text-overflow: ellipsis; 
  overflow : hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.product_name{
  -webkit-line-clamp: 1;
  font-size: 36rpx;
  margin-bottom: 17rpx;
}
.product_describe{
  -webkit-line-clamp: 2;
  color: #999;
  line-height: 45rpx;
  font-size: 30rpx;
}
.product_money{
  margin-top: 15rpx;
}
.money{
  color: #ff0000;
  font-size: 50rpx;
}
.money_unit{
  color: #999999;
  font-size: 30rpx;
}
.count_wrap{
  overflow: hidden;
  width: 100%;
  padding-top: 50rpx;
}
.count_wrap>view:nth-child(1){
  float: left;
  line-height: 50rpx;
}
.count_wrap>view:nth-child(2){
  float: right;
}
/* 兑换方式 */
.exchange_method{
  background-color: white;
  margin-top: 20rpx;
  overflow: hidden;
  padding: 30rpx;
  box-sizing: border-box;
}
.exchange_method>text:nth-child(2){
  float: right;
}
/* 地址 */
.address_info_wrap{
  width: 100%;
  background-color: white;
  margin-top: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.address_info{
  border-bottom:1rpx solid #efefef;
  padding-bottom: 30rpx;
}
.recipient_info{
  font-size: 36rpx;
  overflow: hidden;

}
.recipient_info>text:nth-child(1){
  margin-right: 40rpx;

}
.recipient_info>image{
  width: 28rpx;
  height: 30rpx;
  float: right;
  margin-top: 13rpx;
}
.address_detail{
  font-size: 30rpx;
  margin-top: 25rpx;
}
.freight_describe{
  font-size: 30rpx;
  padding-top: 30rpx;
}

/* 底部按钮栏 */
.bottom_button_wrap{
  position: fixed;
  bottom: 0;
  display: flex;
  background-color: white;
  width: 100%;
  line-height: 120rpx;
  left: 0;
}
.wrap_left{
  flex: 6;
  overflow: hidden;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.wrap_left>text:nth-child(2){
  float: right;
}
.product_money_bottom{
  display: inline-block;
}

.product_money_bottom>text:nth-child(2){
  color: #ff0000;
}
.product_money_bottom>text:nth-child(3){
  color: #999;
}
.wrap_right{
  flex: 2;
  color: white;
  text-align: center;
}