/* pages/trip/tripDetail/tripDetail.wxss */
/* 头部 */
.tripDetailHeader{
  background-color: white;
  padding: 30rpx 30rpx 40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  color: #333;
}

.tripDateInfo{
  font-size: 30rpx;
  margin-top: 40rpx;
}
.tripTitle{
  text-align: center;
  width: 100%;
  font-size: 30rpx;
  font-weight: 900;
}
.tripDateInfo image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.datePlace{
  overflow: hidden;
}
.date{
  float: left;
}
.place{
  float: left;
  margin-left: 60rpx;
}
.time{
  margin-top: 20rpx;
}
/* 分享按钮 */
button::after{
  border: none;
}
.shareBtn{
  font-size: 30rpx;
  position: absolute;
  bottom: 40rpx;
  right: 30rpx;
}
/* 公告内容 */
.contentTitle{
  text-align: center;
  width: 100%;
  padding:30rpx 0;
}
.announcementActivity{
  background-color: white;
  margin-top: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}