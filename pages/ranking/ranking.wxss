.totalShow{
  padding: 15rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 30rpx;
  position: absolute;
  border-radius: 10rpx;
  right: 0rpx;
  top:-60rpx; 
  white-space :nowrap ;
}
/* 头部 */

.rank-header {
  width: 100%;
  background-color: #324d56;
  color: white;
  height: 635rpx;
}

/* 自己的排名 */

.oneself-ranking {
  width: 100%;
  text-align: center;
  padding: 30rpx 0 25rpx;
}

