.order_record{
  overflow: hidden;
}
/* 订单列表组件中的样式 */
.left {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding:30rpx;
}
.product_img{
  height: 200rpx;
  background-color: #dfdfdf;
  flex: 1.8;
}
.product_img img{
  width: 100%;
  height: 100%;
}
.product_info{
  margin-left: 30rpx;
  flex: 4.2;
}
.product_line{
  overflow: hidden;
  margin-top: 20rpx;
}
.product_name{
  font-size: 36rpx;
}
.record_time{
  float: right;
}
.record_time,.product_describe,.product_money_unit{
  font-size: 30rpx;
  color: #999;
}
.money_info{
  float: left;
}
.product_money{
  color: #ff0000;
  font-size: 36rpx;
}

.product_count{
  float: right;
  font-size: 30rpx;
}
.product_line:nth-child(2)>text{
   text-overflow: ellipsis; 
  overflow : hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.right {
  display: flex;
  direction: row;
  text-align: center;
  vertical-align: middle;
  font-size: 32rpx;
}
.delete {
  color: #fff;
  width: 160rpx; 
}
/* 暂无记录 */
.no_record{
  width: 100%;
  background-color: white;
  position: relative;
}
.no_record_content{
  width: 400rpx;
  height: 400rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -250rpx;
  margin-left: -200rpx;
  text-align: center;
}
.no_record_content>image{
  width: 230rpx;
  height: 230rpx;
  margin-bottom: 35rpx;
}
.no_record_content>view{
  color: #999999;
}