/* pages/complete_personal_info/complete_personal_info.wxss */
.container{
  background-color:  #324D56;

  align-items: center;
  justify-content: center;

  font-size: 30rpx;
}

.portrait{
  width: 180rpx;
  height: 180rpx;

  border-radius: 50%;
}

form{
  width: 100%;
  margin-bottom: 90rpx;
  padding: 0 84rpx;
  box-sizing: border-box;
}

.nickname{
  /* width: 100%; */
  height: 103rpx;
  background-color: white;
  border-radius: 10rpx;
  margin-top: 95rpx;
  padding: 0 30rpx;

  color: #333;
}

.sex_desc,.birth_desc{
  font-size: 32rpx;
  display: block;
  margin-top: 29rpx;
}

.sex_block{
  display: flex;
  align-items: center;
  margin-top: 28rpx;
}

.sex_male,.sex_female{
  width: 123rpx;
  height: 63rpx;
  border-radius: 10rpx;

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 26rpx;
  line-height: 1;
}

.sex_female{
  margin-left: 38rpx;
}

.sex_male image,.sex_female image{
  width: 23rpx;
  height: 23rpx;
  margin-right: 14rpx;
}

/* 出生日期 */
.birth{
  width: 213rpx;
  height: 63rpx;
  display: block;
  text-align: center;
  line-height: 63rpx;
  background-color: white;
  border-radius: 10rpx;
  margin-top: 28rpx;
  font-size: 26rpx;
}

.complete{
  /* width: 583rpx; */
  height: 103rpx;
  border-radius: 10rpx;
  /* background-size: 583rpx 103rpx; */

  color: white;
  font-size: 30rpx;
  line-height: 103rpx;
  margin-top: 125rpx;
}