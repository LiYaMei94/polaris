@import '../component/polaris-item-wrap/polaris-item-wrap.wxss';
@import '../template/dialog-simple/dialog-simple.wxss';
page{
  height: 100%;
}
.polaris-item-wrap{
  padding-bottom: 24rpx;
}
.detail-polaris-item-wrap-video{
  height: auto;
}
.detail-polaris-item-wrap-video>video{
  height: 225px;
}
/* 评论 */
.review{
  margin-top: 15rpx;
  padding-bottom: 110rpx;
  background-color: white;
}
.reviewNum{
  color: #999;
  font-weight: normal;
  font-size: 28rpx;
}
/* 评论列表 */

.review-item{
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: white;
  font-size: 28rpx;
}
.review-item:nth-child(2){
  padding-top: 40rpx;
}
.headImg{
  flex: 1;
}
.headImg image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.review-item-right{
  flex: 5;
  margin-left: 20rpx;
}
.like image{
  width: 27rpx;
  height: 27rpx;
  margin-right: 10rpx;
}
.item-line {
  overflow: hidden;
}
.item-line:nth-child(2){
  margin-top: 10rpx;
}
.reviewUserName{
  float: left;
}
.like{
  float: right;
}
.reviewTime{
 color: #999;
 text-align: right;
 width: 100%;
}
.loadMore{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
}
/* 评论列表图片 */
.review-show-img{
  flex: 5;
  overflow: hidden;
  
}
.review-show-img image{
  float: left;
  width: 185rpx;
  height: 185rpx;
  margin-bottom: 10rpx;
}
/* 评论底部 */
.review-footer{
  width: 100%;
  height: 100rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0rpx 0rpx 30rpx #999999;
  font-size: 30rpx;
  color: #999;
  line-height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.footer-left{
  float: left;
}
.footer-left>image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.footer-right{
  float: right;
  width: 80rpx;
}
.footer-right>image{
  width: 27rpx;
  height: 27rpx;
  margin-right: 20rpx;
}
.footer-right text{
  color: #333;
}
/* 评论弹出框 */
.reviewDialog{
  height: 100%;
  background-color: white;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.inputBox{
  position: relative;
  width: 100%;
  height: 350rpx;
}
.inputBox>textarea{
  padding: 30rpx;
  box-sizing: border-box;
  width: 100%;
}
.limit{
  position: absolute;
  bottom: 0rpx;
  right: 30rpx;
  font-size: 30rpx;
  color: #999;
}
.comment-img-show{
  width: 100%;
  padding: 0 30rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.comment-img-show-item{
  position: relative;
  float: left;
  height: 300rpx;
  overflow: hidden;
}
.comment-img-show-item image{
  width: 100%;
  height: 100%;
}
.deleteImg{
  width: 50rpx;
  height: 50rpx;
  color: white;
  background-color: rgba(0, 0, 0, 0.5);
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.operationBox{
  width: 100%;
  height: 160rpx;
  border-top: 1rpx solid #C5C5C5;
  overflow: hidden;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.imgBtn{
  width: 65rpx;
  height: 65rpx;
  vertical-align: middle;
  float: left;
  margin-top: 47.5rpx;
}
.published{
  display: block;
  float: right;
  margin-top: 45rpx;
}
.cancel{
  display: block;
  margin-top: 45rpx;
  float: left;
}
/* 下拉 */
.drop-down{
  width: 100%;
  height: 60rpx;
  background-color: #000;
  font-size: 30rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center; 
  padding:0 30rpx;
  box-sizing: border-box;
}
.drop-down text{
 color: white;
 flex: 1;
}
.dropDownIcon{
  flex: 1;
  text-align: right;
}
.drop-down image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 16rpx;
}
.issueClickCan{
  width:400rpx; 
  background-color:#ccc;
}
