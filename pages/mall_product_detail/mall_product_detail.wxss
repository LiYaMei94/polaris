/* 商品主图 */
.product_image{
  width: 100%;
  height: 500rpx;
  background-color: #dfdfdf;
}
.product_image>image{
  width: 100%;
  height: 100%;
} 
/* 商品信息 */
.product_info{
  padding: 40rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: white;
}
.product_name_wrap{
  overflow: hidden;
  margin-bottom: 25rpx;
}
.product_name{
  font-size: 36rpx;
  float: left;
}
.share_button{
  width: 40rpx;
  height: 40rpx;
  float: right;
}
.product_describe{
  color: #999999;
}
/* 兑换方式 */
.exchange_wrap_title{
  margin: 40rpx 0;
}
.exchange_method{
  width: 100%;
  overflow: hidden;
}
.method_item{
  float: left;
}
.method_item>text:nth-child(1){
  color: #ff0000;
  font-size: 50rpx;
}
.method_item>text:nth-child(2){
  color: #999999;
  margin: 0 20rpx 0 10rpx;
}
.method_item:nth-child(1){
  margin-right: 60rpx;
}
/* 运费描述 */
.freight_describe{
  margin-top: 10rpx;
  background-color: white;
  padding: 40rpx;
  box-sizing: border-box;
  width: 100%;
}
.freight_describe_title{
  color: #999999;
  font-size: 30rpx;
}
/* 底部按钮栏 */
.bottom_button_wrap{
  position: fixed;
  bottom: 0;
  display: flex;
  background-color: white;
  width: 100%;
  line-height: 120rpx;
  left: 0;
}
.wrap_left{
  flex: 6;
  overflow: hidden;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.wrap_left>text:nth-child(2){
  float: right;
}
.product_money{
  display: inline-block;
}

.product_money>text:nth-child(2){
  color: #ff0000;
}
.product_money>text:nth-child(3){
  color: #999;
}
.wrap_right{
  flex: 2;
  color: white;
  text-align: center;
  
}
/* 修改radio样式 */
radio .wx-radio-input{
  border-radius: 5rpx;
  border: solid 1px #2d9fff;
  width: 36rpx;
  height: 36rpx;
  margin-top: -14rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  border: none;
  background: #2d9fff;
  width: 36rpx;
  height: 36rpx;
}
/* 修改button样式 */
button{
  background-color: white;
  border-top-color: transparent;
  height: 80rpx;
  width: 80rpx;
  float: right;
  position: static;
}