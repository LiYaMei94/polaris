.dialog-calendar-container {
  height: 100%;
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog-calendar-back {
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 9;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.dialog-calendar-content {
  width: 602rpx;
  z-index: 20;
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}

/* 上方 */

.dialog-calendar-top {
  background-color: #324d56;
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  font-size: 26rpx;
  color: white;
  display: flex;
  flex-direction: column;
}

.dialog-calendar-title {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  text-align: center;
  margin-top: 33rpx;
  letter-spacing: 2rpx;
}

.dialog-calendar-head {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  padding: 44rpx 20rpx 30rpx 20rpx;
  line-height: 1;
}

.dialog-calendar-head-item {
  flex: 1;
  text-align: center;
}

/* 日历部分 */

.dialog-calendar-calendar {
  background-color: white;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  width: 100%;
  padding: 30rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}

.dialog-calendar-calendar-item {
  flex: 14.28%;
  height: 85rpx;
  font-size: 26rpx;
  /* line-height: 1; */
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  position: relative;
}

.currentMonth {
  color: #333;
}

.otherMonth {
  color: #999;
}

.dialog-calendar-calendar-text {
  z-index: 30;
}

.dialog-calendar-calendar-img-container {
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff2d2d;
  font-size: 16rpx;
}

.dialog-calendar-calendar-img-y {
  width: 23rpx;
  height: 24rpx;
}

.dialog-calendar-calendar-img-n {
  width: 10rpx;
  height: 10rpx;
}

.dialog-calendar-calendar-text-block {
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog-calendar-calendar-back {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  z-index: 5;
  border-radius: 50%;
  /* margin-bottom: 100rpx; */
}
