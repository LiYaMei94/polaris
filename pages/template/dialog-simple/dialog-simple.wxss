.dialog-simple{
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  top: 0;
  left: 0;
}
.dialog-simple-back{
 width: 100%;
  height: 100%;
  position: fixed;
  z-index: 20;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  left: 0;
  top: 0;
}
.dialog-simple-container {
  z-index: 30;
  width: 503rpx;
  background-color: white;
  border-radius: 10rpx;
  margin: auto auto;
  color: #333;
  font-size: 30rpx;
  text-align: center;

  box-sizing: border-box;
  padding: 55rpx 30rpx 10rpx 30rpx;
}
.dialog-comment-simple-container{
  padding: 0;
}
.dialog-simple-content {
  display: block;
  padding: 30rpx 0 10rpx 0;
}
.dialog-comment-simple-content{
  line-height: 50rpx;
}
.dialog-simple-select {
  font-size: 26rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  display: flex;

  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
  margin-top: 20rpx;
}
.dialog-comment-simple-select{
  padding: 0;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.dialog-simple-op {
  /* width: 100rpx; */
  padding: 0 30rpx;
  text-align: center;
}
.dialog-comment-simple-op{
  flex: 1;
  text-align: center;
  padding: 0;
  border-top: 1rpx solid #E6E6E6;
}
.dialog-comment-simple-op:nth-child(2){
   border-left: 1rpx solid #E6E6E6;
}
