page{
  height: 100%;
}
.reinforceTaskDetail{
  width: 100%;
  height: 100%;
  background-color: #324d56;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.detailContent{
  width: 100%;
  height: 100%;
  background-color: white;
  border-radius: 12rpx;
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
}
.taskTitle{
  margin-bottom: 50rpx;
  font-size: 40rpx;
  font-weight: 900;
}
.taskTypeBtn{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
/* 任务完成的按钮样式 */
.finshedTypeBtn{
  background-color: #ccc;
}
.taskInfo{
  margin-bottom: 45rpx;
}
.taskInfo text{
  margin-top: 5rpx;
}
.taskInfo text:nth-child(1){
  color: #999;
}
.taskInfo text:nth-child(2){
  color: #666;
}
.contenttitle{
  color: #999!important;
  margin-bottom: 20rpx;
}
/* 返回应援中心按钮 */
.goReinforceList{
  width: 300rpx;
  position: absolute;
  bottom: 100rpx;
  border-radius: 40rpx;
  left: 50%;
  margin-left: -150rpx;
  height: 80rpx;
  line-height: 80rpx;
}