/* pages/mine/mine.wxss */
@import "../template/dialog-classify/dialog-classify.wxss";

.back {
  width: 100%;
  height: 292rpx;
  background-color: #324d56;
  position: absolute;
  z-index: -1;
}



/* 个人信息区 */
.loginPage{
  height: 100%;
  background-color: white;
  text-align: center;
  padding: 32% 0 0;
  box-sizing: border-box;
}
.buttonBox{
  width: 100%;
  color: #999;
}
.buttonBox image{
  width: 260rpx;
  height: 260rpx;
  margin-bottom: 50rpx;
}
.loginBtn{
  width: 300rpx;
  color: white;
  border-radius: 50rpx;
  margin-top: 70rpx;
}
/* 个人信息区 */

.info {
  width: 692rpx;
  height: 332rpx;
  margin: 28rpx auto;
  background-color: white;
  box-shadow: 5rpx 5rpx 10rpx 0rpx rgba(119, 158, 188, 0.15);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login{
  width: 692rpx;
  height: 332rpx;
  position: absolute;
  z-index: 50;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  color: #333;
}

.info_person {
  width: 100%;
  height: 220rpx;
  display: flex;
  align-items: center;
}

.info_portrait_block {
  width: 193rpx;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.info_portrait {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
}

.info_name_block {
  flex: 1;
  padding-right: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;

  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.info_name {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;

  display: flex;
  align-items: flex-end;
}

.name {
  /* text-shadow: 1rpx  0 #333333; */
  line-height: 1.6;
  font-weight: bold;
  height: auto;
  max-width: 60%;
  letter-spacing: 2rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* align-self: center; */
}

.sex {
  width: 26rpx;
  height: 40rpx;
  margin-left: 14rpx;
  /* align-self: center; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.sex image{
  width: 26rpx;
}

/* vip */

.vip {
  /* align-self: flex-start; */
  width: 86rpx;
  height: 70rpx;
  margin-left: 15rpx;
  position: relative;
  
  display: flex;
  justify-content: center;
  align-items: center;
}

.vip image {
  width: 86rpx;
  height: 70rpx;
  /* position: absolute; */
}
.level_info{
  color: white;
  font-size: 20rpx;
  line-height: 1;
  font-style: italic;
  font-weight: bold;

  display: flex;
  align-items: center;
  justify-content: center;

  position: absolute;
}
.level{
  color: #BE7000;
  margin-left: 2rpx;
}
.info_jv {
  width: 600rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.info_jv text {
  color: #2da9ff;
  margin-right: 8rpx;
}

.line_horizontal {
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
}

/* 中间操作区 */

.op {
  width: 692rpx;
  /* height: 246rpx; */
  margin: 0 28rpx 29rpx 28rpx;
  background-color: white;
  box-shadow: 5rpx 5rpx 10rpx 0rpx rgba(119, 158, 188, 0.15);
  border-radius: 10rpx;
  /* display: flex; */
  padding:0 20rpx 40rpx; 
  box-sizing: border-box;
  overflow: hidden;
}

.op navigator {
  /* flex: 0 0 33.33%; */
  float: left;
  width: 33.33%;
  margin-top: 40rpx;
}

.op_item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #333;
  line-height: 1;
}

.op_item image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 19rpx;
}

/* 我的发布 */

.post {
  display: flex;
  flex-direction: column;
}

.post_title {
  display: flex;
  font-size: 26rpx;
  color: #999;
  align-items: center;
  padding: 30rpx 30rpx 20rpx 30rpx;
  background-color: white;
  position: relative;
}

.post_desc {
  font-size: 30rpx;
  color: #333;
  border-left: 7rpx solid #57d78c;
  line-height: 1;
  padding-left: 25rpx;
  margin-right: 8rpx;
  font-weight: bold;
  /* text-shadow: 1rpx  0 #333333; */
}

.more {
  display: flex;
  align-items: center;
}

.more_image {
  width: 18rpx;
  height: 10rpx;
  margin-left: 12rpx;
}

/* 弹窗 */
