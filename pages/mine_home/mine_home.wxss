/* pages/mine_home/mine_home.wxss */
@import "../template/dialog-classify/dialog-classify.wxss";
@import "../template/dialog-calendar/dialog-calendar.wxss";

.back {
  width: 100%;
  height: 374rpx;
  background-color: #324d56;
  position: absolute;
  z-index: -1;
}

/* 个人信息 */

.person {
  width: 692rpx;
  padding: 28rpx;
  margin: 28rpx auto;
  box-sizing: border-box;
  background-color: white;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 5rpx 5rpx 10rpx 0rpx rgba(119, 158, 188, 0.15);
}

/* 展示 */

.info {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 10rpx 0 29rpx 0;
}

.info_left{
  width: 190rpx;
  display: flex;
  flex-direction: column;
}

.l_portrait_block {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: ceter;
  margin-top: 10rpx;
}

.l_level {
  width: 192rpx;
  height: 196rpx;
  position: absolute;
  left: 27rpx;
}

.l_portrait {
  height: 128rpx;
  width: 128rpx;
  border-radius: 10rpx;
}

/* vip */

.vip {
  width: 128rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  /* margin-bottom: 20rpx; */
}

.vip image {
  width: 86rpx;
  height: 70rpx;
}

